{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@content/*": ["content/*"],
      "@config/*": ["config/*"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "scripts/**/*", "content/**/*", "config/**/*"],
  "exclude": ["node_modules", "dist"]
}
