<style>
  .games-page {
    padding: 2rem 0 4rem;
  }
  
  .games-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .games-emoji {
    font-size: 4rem;
    display: block;
    margin-bottom: 1rem;
  }
  
  .games-header h1 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
  
  .games-description {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .game-card {
    background: white;
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: all var(--transition-slow);
  }
  
  .game-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }
  
  .game-card__emoji {
    font-size: 4rem;
    display: block;
    margin-bottom: 1rem;
  }
  
  .game-card__title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }
  
  .game-card__description {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .game-card__levels {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
  }
  
  .level-btn {
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-full);
    font-weight: 700;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .level-btn--cp {
    background: var(--color-cp-light);
    color: var(--color-cp-dark);
  }
  
  .level-btn--ce1 {
    background: var(--color-ce1-light);
    color: var(--color-ce1-dark);
  }
  
  .level-btn--ce2 {
    background: var(--color-ce2-light);
    color: var(--color-ce2-dark);
  }
  
  .level-btn:hover {
    transform: scale(1.1);
    box-shadow: var(--shadow-sm);
  }
  
  .how-to-play {
    background: linear-gradient(135deg, #fef3c7, #fce7f3);
    border-radius: var(--radius-lg);
    padding: 2rem;
  }
  
  .how-to-play h2 {
    font-family: var(--font-display);
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .how-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }
  
  .how-card {
    text-align: center;
  }
  
  .how-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .how-card h3 {
    font-family: var(--font-display);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  
  .how-card p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin: 0;
  }
</style>
