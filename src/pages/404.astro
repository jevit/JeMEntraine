---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page non trouvee">
  <div class="not-found">
    <span class="not-found__emoji">üîç</span>
    <h1 class="not-found__title">Oups !</h1>
    <p class="not-found__message">
      Cette page n'existe pas encore ou le contenu n'est pas disponible.
    </p>
    <p class="not-found__hint">
      De nouveaux exercices arrivent bientot !
    </p>
    <div class="not-found__actions">
      <a href="/" class="btn btn--primary">
        Retour a l'accueil
      </a>
      <a href="/jeux" class="btn btn--secondary">
        Jouer aux mini-jeux
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 3rem 1.5rem;
  }

  .not-found__emoji {
    font-size: 5rem;
    display: block;
    margin-bottom: 1.5rem;
    animation: bounce 2s ease infinite;
  }

  .not-found__title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .not-found__message {
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .not-found__hint {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .not-found__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
</style>
